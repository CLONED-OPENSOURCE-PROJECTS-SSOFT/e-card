<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.imalok.project.MainActivity">


    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pass"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="74dp"
        android:ems="10"
        android:textColor="#fff"
        android:drawableLeft="@drawable/ic_action_user"
        android:hint="Email-Id"
        android:inputType="textEmailAddress"
        android:text="" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/log"
        android:textColor="#fff"
        android:drawableLeft="@drawable/ic_action_pass"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginBottom="56dp"
        android:digits="0123456789"
        android:ems="10"
        android:hint="PIN"
        android:imeOptions="actionDone"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:text="" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/email"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:clickable="true"
        android:singleLine="false"
        android:text="Forgot Password?"
        android:textColor="#000000"
        android:textIsSelectable="false" />

    <Button
        android:id="@+id/log"
        android:layout_width="130dp"
        android:layout_height="25dp"
        android:layout_above="@+id/reg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:background="@color/colorPrimary"
        android:text="Login"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/reg"
        android:layout_alignBottom="@+id/reg"
        android:layout_alignLeft="@+id/pass"
        android:layout_alignStart="@+id/pass"
        android:text="New User?"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_marginBottom="98dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:text="Register Here"
        android:textColor="#fff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:text="v 1.0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/logo72" />


</RelativeLayout>
